<%- include('templet/header') %> 

<form action="/update/<%= user._id %> " method="post">
    <div class="mb-3">
      <label for="exampleInputEmail1" class="form-label">Name</label>
      <br>
      <input name="name" class="form-control" id="name" value="<%= user.name %> " aria-describedby="emailHelp" width="100%">
    </div>

    <div class="mb-3">
      <label for="exampleInputPassword1" class="form-label">Email</label>
      <input name="email" class="form-control" id="email" value="<%= user.email %> ">
    </div>

    <div class="mb-3">
      <label for="exampleInputPassword1" class="form-label">Phone</label>
      <input type="text" name="phone" class="form-control" id="email" value="<%= user.phone %> ">
    </div>
    
    <button type="submit" class="btn btn-primary">Update</button>
  </form>


